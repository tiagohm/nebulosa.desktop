		"@primevue/auto-import-resolver": "4.3.3",
		"@tailwindcss/vite": "4.0.15",
		"@tsconfig/node22": "22",
		"@types/node": "latest",
		"@vitejs/plugin-vue": "5.2.3",
		"@vue/tsconfig": "0.7.0",
		"electron": "35.0.3",
		"electron-builder": "26.0.12",
		"npm-run-all2": "7.0.2",
